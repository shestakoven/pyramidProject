{% extends "layout.jinja2" %}

{% block content %}
<div class="content">
  <h1><span class="font-semi-bold">Pyramid</span> <span class="smaller">Starter project</span></h1>
  <p class="lead">Welcome to a&nbsp;Pyramid application generated&nbsp;by<br><span class="font-normal">Cookiecutter</span>.</p>

  {% for capture in captures %}
    <div class="row">
    <img src="{{ capture.path }}">
      <div style="display: inline-block">
        <p>Created at: {{ capture.created_at }}</p>
        <p>From camera: {{ capture.camera }}</p>
      </div>
    </div>
  {% endfor %}
</div>
{% endblock content %}
